.PHONY: help install setup test test-db dev clean clean-all status

help: ## Show this help message
	@echo "MCP PostgreSQL Server"
	@echo "===================="
	@echo ""
	@echo "Available commands:"
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-15s\033[0m %s\n", $$1, $$2}'

setup: ## Complete project setup (virtual environment + dependencies)
	@echo "ðŸš€ Setting up MCP PostgreSQL Server..."
	@echo "Creating virtual environment with uv..."
	uv venv
	@echo "Installing dependencies..."
	uv pip install -r requirements.txt
	@echo "âœ… Setup complete! Activate with: source venv/bin/activate"

install: ## Install Python dependencies (requires existing venv)
	@echo "ðŸ“¦ Installing dependencies..."
	@if [ ! -d "venv" ]; then echo "âŒ Virtual environment not found. Run 'make setup' first."; exit 1; fi
	uv pip install -r requirements.txt
	@echo "âœ… Dependencies installed"

test-db: ## Test PostgreSQL database connectivity
	@echo "ðŸ” Testing database connectivity..."
	@if [ ! -d "venv" ]; then echo "âŒ Virtual environment not found. Run 'make setup' first."; exit 1; fi
	uv run python test_db.py

test: ## Test the MCP server
	@echo "ðŸ§ª Testing MCP server..."
	@if [ ! -d "venv" ]; then echo "âŒ Virtual environment not found. Run 'make setup' first."; exit 1; fi
	@echo "Starting server (press Ctrl+C to stop)..."
	uv run python server.py

clean: ## Clean up generated files
	@echo "ðŸ§¹ Cleaning up..."
	rm -rf __pycache__
	rm -rf .pytest_cache
	rm -f test_db.py
	find . -name "*.pyc" -delete
	@echo "âœ… Cleanup complete"

clean-all: ## Clean up everything including virtual environment
	@echo "ðŸ§¹ Deep cleaning..."
	rm -rf __pycache__
	rm -rf .pytest_cache
	rm -rf venv
	rm -f test_db.py
	find . -name "*.pyc" -delete
	@echo "âœ… Deep cleanup complete"

status: ## Show current status
	@echo "ðŸ“Š Status:"
	@echo "=========="
	@echo "Working directory: $(shell pwd)"
	@echo "Python version: $(shell python3 --version 2>&1)"
	@echo "uv version: $(shell uv --version 2>&1 || echo "âŒ uv not installed")"
	@echo "Virtual environment: $(shell [ -d "venv" ] && echo "âœ… venv exists" || echo "âŒ missing - run 'make setup'")"
	@echo "Dependencies: $(shell [ -f requirements.txt ] && echo "âœ… requirements.txt exists" || echo "âŒ missing")"
	@echo "Server file: $(shell [ -f server.py ] && echo "âœ… server.py exists" || echo "âŒ missing")"
	@if [ -d "venv" ]; then echo "Virtual env Python: $(shell uv run python --version 2>&1)"; fi